echo parameter count
function fcount {
  echo "$#"
}

fcount
fcount a
fcount a b

echo parameter count, with nesting
function ffcount {
  echo "$#"
  fcount
  fcount a
  fcount a b
}

ffcount
ffcount 1
ffcount 1 2

echo parameters
function fparam {
  echo 1 $1
  echo 2 $2
  echo 3 $3
}

fparam
fparam a
fparam a b

echo parameters, with nesting
function ffparam {
  echo 1 $1
  echo 2 $2
  echo 3 $3
  fparam
  fparam a
  fparam a b
}

ffparam
ffparam 1
ffparam 1 2
